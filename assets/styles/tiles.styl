.tile
	display flex
	flex-flow column nowrap
	height 350px
	border-radius 5px
	-webkit-tap-highlight-color rgba(0,0,0,0)
	box-shadow 0 14px 45px rgba(0, 0, 0, 0.25), 0 10px 18px rgba(0, 0, 0, 0.22)
	background-size contain
	text-align center
	padding 5%
	
	
	p, h1
		color #fff
		align-self center
		text-shadow 3px 3px 3px #000, -1px -1px 3px #000,   1px -1px 0 #000, -1px  1px 0 #000, 1px  1px 3px #000
		
.mks
	background #AAC0D5 url('../images/makersquare-logo.png') no-repeat center center

.ut
	background #C7AF9F url('../images/ut-seal.png') no-repeat center center
.t3
	background transparent url('../images/t3.png') no-repeat center center
	background-size cover
	